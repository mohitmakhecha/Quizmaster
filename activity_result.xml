<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_dialog_info"
        app:tint="@color/primary"
        android:layout_marginBottom="@dimen/spacing_lg"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Completed!"
        android:textSize="@dimen/text_heading_1"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="@dimen/spacing_md"/>

    <!-- Score Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lg"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Score: 8/10"
                android:textSize="@dimen/text_heading_2"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_download_pdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/btn_primary"
        android:text="Download Detailed Report (PDF)"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:layout_marginBottom="@dimen/spacing_md"/>

    <Button
        android:id="@+id/btn_certificate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/btn_primary"
        android:backgroundTint="@color/success"
        android:text="Download Certificate"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:layout_marginBottom="@dimen/spacing_md"/>
    
    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/btn_primary"
        android:backgroundTint="@color/text_secondary"
        android:text="Back to Dashboard"
        android:textColor="@color/white"
        app:backgroundTint="@null"/>

</LinearLayout>
